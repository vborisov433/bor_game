{# templates/upload/form.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">

        <h1 class="mb-4">Upload a Picture</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <form action="{{ path('app_upload') }}" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">

            <div class="mb-3">
                <label class="form-label d-block">Type</label>

                <input type="radio" class="btn-check" name="groupType" id="group1" value="1" autocomplete="off">
                <label class="btn btn-outline-info" for="group1">
                    <i class="bi bi-bar-chart-fill"></i> Long-term
                </label>

                <input type="radio" class="btn-check" name="groupType" id="group2" value="2" autocomplete="off" checked>
                <label class="btn btn-outline-primary" for="group2">
                     Live
                </label>
            </div>

            <div class="mb-3">
                <label for="picture" class="form-label">Choose a picture</label>
                <input class="form-control" type="file" id="picture" name="picture" accept="image/*" required>
            </div>



            <button type="submit" class="btn btn-primary">
                <i class="bi bi-upload"></i> Upload
            </button>
        </form>
    </div>
{% endblock %}
